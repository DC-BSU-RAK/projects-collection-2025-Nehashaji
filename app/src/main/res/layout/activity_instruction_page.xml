<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    card_view:cardCornerRadius="24dp"
    card_view:cardElevation="20dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:strokeColor="#2C6E63"
    card_view:strokeWidth="2dp"
    android:id="@+id/instructions" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F9F6F1"
        android:padding="26dp">

        <!-- Header Title -->
        <TextView
            android:id="@+id/instructionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📍 Welcome to Global Essence!"
            android:textAlignment="center"
            android:textColor="#2C6E63"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/cinzel" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:background="#D4AF37" />

        <!-- Instructions -->
        <TextView
            android:id="@+id/instructionContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✨ Tap on any country pin to begin exploring.\n\n🌍 Dive into fascinating cultures, surprising facts, and educational insights.\n\n🧭 Navigate smoothly using the bottom menu: Home • Explore • Profile.\n\n🎓 Stay curious and keep learning with every tap!"
            android:textColor="#2B2B2B"
            android:textSize="18sp"
            android:lineSpacingExtra="8dp"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="6dp" />

        <!-- Gold text Note -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="💡 Unlock the essence of cultures, one country at a time. Your global journey begins here! 🌐"
            android:textColor="#D4AF37"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4dp" />

        <!-- Close Button -->
        <Button
            android:id="@+id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="24dp"
            android:text="Got it!"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1D4F49"
            android:textStyle="bold"
            android:textSize="17sp"
            android:fontFamily="@font/cinzel" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
