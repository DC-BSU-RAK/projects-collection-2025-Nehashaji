<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CountryBlock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/bg_country_box</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="CountryImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="CountryTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#114B2D</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="CountryInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="ViewMoreBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">#114B2D</item>
    </style>

</resources>