<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F0"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Country Name Card -->
        <ImageView
            android:id="@+id/countryImage"
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:contentDescription="Country Image"
            android:scaleType="centerCrop"
            android:src="@drawable/usa" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            card_view:cardElevation="10dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardBackgroundColor="#FFFFFF">

            <TextView
                android:id="@+id/countryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cinzel"
                android:padding="16dp"
                android:text="United States"
                android:textColor="#2C6E63"
                android:textSize="24sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <!-- Description -->
        <TextView
            android:id="@+id/countryDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="The United States of America is known for its cultural diversity, innovation, and iconic landmarks like the Statue of Liberty and the Grand Canyon."
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:textColor="#444444"
            android:fontFamily="sans-serif-medium" />

        <!-- Info Cards -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            card_view:cardElevation="8dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardBackgroundColor="#F0FAF9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/capitalText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🗽 Capital: Washington, D.C."
                    android:textSize="16sp"
                    android:paddingBottom="6dp"
                    android:textColor="#1D4F49" />

                <TextView
                    android:id="@+id/populationText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="👥 Population: 331 million"
                    android:textSize="16sp"
                    android:paddingBottom="6dp"
                    android:textColor="#1D4F49" />

                <TextView
                    android:id="@+id/languageText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🗣 Language: English"
                    android:textSize="16sp"
                    android:paddingBottom="6dp"
                    android:textColor="#1D4F49" />

                <TextView
                    android:id="@+id/currencyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="💰 Currency: US Dollar"
                    android:textSize="16sp"
                    android:paddingBottom="6dp"
                    android:textColor="#1D4F49" />

                <TextView
                    android:id="@+id/funFactText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✨ Fun Fact: The U.S. has the world’s largest economy!"
                    android:textSize="16sp"
                    android:textColor="#D4AF37"
                    android:paddingTop="6dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Explore More Button -->
        <Button
            android:id="@+id/btnExploreMore"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="24dp"
            android:text="Explore More 🌐"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2C6E63"
            android:textSize="17sp"
            android:fontFamily="@font/cinzel"
            android:textStyle="bold" />

        <!-- Close Button -->
        <Button
            android:id="@+id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#A02828"
            android:fontFamily="@font/cinzel"
            android:text="Close ❌"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold" />


    </LinearLayout>
</ScrollView>
